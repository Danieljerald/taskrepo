@model Signin
@{
    ViewData["Title"] = "Login";
}

<head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex, nofollow">

    <title>Bootstrap Two Login Form - Bootsnipp.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <style type="text/css">
        .login-container {
            margin-top: 13%;
            margin-bottom: 5%;
        }

        .login-logo {
            position: relative;
            margin-left: -41.5%;
        }

        .login-logo img {
            position: absolute;
            width: 20%;
            margin-top: 19%;
            background: #282726;
            border-radius: 4.5rem;
            padding: 5%;
        }

        .login-form-1 {
            padding: 9%;
            background: #282726;
            box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
        }

        .login-form-1 h3 {
            text-align: center;
            margin-bottom: 12%;
            color: #fff;
        }

        .btnSubmit {
            font-weight: 600;
            width: 50%;
            color: #282726;
            background-color: #fff;
            border: none;
            border-radius: 1.5rem;
            padding: 2%;
        }

        .btnForgetPwd {
            color: #fff;
            font-weight: 600;
            text-decoration: none;
            text-align: center;
        @*width:3rem;*@
        }

        .btnForgetPwd:hover {
            text-decoration: none;
            color: #fff;
            width: 5rem;

        }
    </style>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        window.alert = function () { };
        var defaultCSS = document.getElementById('bootstrap-css');
        function changeCSS(css) {
            if (css) $('head > link').filter(':first').replaceWith('<link rel="stylesheet" href="' + css + '" type="text/css" />');
            else $('head > link').filter(':first').replaceWith(defaultCSS);
        }
        $(document).ready(function () {
            var iframe_height = parseInt($('html').height());
            window.parent.postMessage(iframe_height, 'https://bootsnipp.com');
        });
    </script>
</head>

<body style="background-image: radial-gradient( circle farthest-corner at 10% 20%,  rgba(0,84,166,1) 0%, rgba(132,189,201,1) 90% );">
    <div class="container login-container" style="padding-left: 425px;" ;">
        <div class="row">
            <div class="col-md-6 login-form-1" style="align-items: center;">
                <h3>Login</h3>
                <form method="post">
                    @* <div class="text-danger" asp-validation-summary="All"></div> *@
                    <div class="form-group">
                        <input type="text" asp-for="EmployeeId" class="form-control" placeholder="Employee Id "
                            required />
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="EmployeeName" class="form-control" placeholder="Employee Name"
                            value="" required />
                    </div>
                    <div class="form-group">
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password " value=""
                            required />
                    </div>

                    <div class="form-group" style="padding-left: 75px;">
                        <input type="submit" class="btnSubmit" value="Login" />
                    </div>
                    <div class="form-group">
                        <a href="/home/ForgotPassword" type="submit" class="btnForgetPwd"
                            style="padding-left: 47px;">Forgot Password?</a>
                    </div>
                    <div class="form-group">
                        
                        <div style="text-align: center; color:white">@ViewBag.Message</div>
                    </div>


                </form>




            </div>
        </div>
    </div>
</body>

</html>


